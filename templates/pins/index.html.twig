{% extends "base.html.twig" %}
{% block head %}
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Pinterest clone{% endblock %}</title>
</head>
{% endblock %}
{% block body %}
<body>
    <h1>{{ pluralize(pins|length ,'Pin')}}</h1>

    {% for pin in pins %}
        <article>
            <h1><a href="{{ path('app_pins_show', {'id': pin.id}) }}">{{ pin.title }}</a></h1>
            <p>{{ pin.description|u.truncate(10, '...', false) }}</p>
            <p class="text-muted mt-2">Submitted by {{ pin.user.fullName }}</p>
        </article>
    {% else %}
        <p>Sorry, no pins yet !</p>
    {% endfor %}
</body>
{% endblock %}

