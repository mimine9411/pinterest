<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Pinterest</title>
    {% block stylesheets %}
        <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    {% endblock %}
</head>
<body>

<div class="flex flex-col items-center min-h-screen">
    <header class="mt-12">
        <h1 class="text-6xl text-center font-semibold">Create pins</h1>
    </header>
    <main class="mt-32">
        <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" href="{{ path('app_home') }}">back</a>
        {{  form_start(form) }}

        {{  form_widget(form) }}
        <input type="submit" value="Create Pin" class="bg-blue-500 text-center hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
        {{  form_end(form) }}
    </main>
</div>
</body>
</html>